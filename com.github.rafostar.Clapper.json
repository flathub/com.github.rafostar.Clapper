{
    "app-id": "com.github.rafostar.Clapper",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "command": "com.github.rafostar.Clapper",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--socket=pulseaudio",
        "--share=network",
        "--device=all",
        "--filesystem=xdg-run/pipewire-0:ro",
        "--filesystem=xdg-videos",
        "--own-name=org.mpris.MediaPlayer2.Clapper",
        "--talk-name=org.gnome.Shell",
        "--env=GST_PLUGIN_SYSTEM_PATH=/app/lib/gstreamer-1.0"
    ],
    "modules": [
        "shared-modules/gudev/gudev.json",
        "lib/pango.json",
        "lib/libsass.json",
        "lib/sassc.json",
        "lib/liba52.json",
        "lib/libmpeg2.json",
        "lib/libdv.json",
        "lib/libdvdcss.json",
        "lib/libdvdread.json",
        "lib/libdvdnav.json",
        "lib/libass.json",
        "lib/ffmpeg.json",
        "lib/uchardet.json",
        "gstreamer-1.0/gstreamer.json",
        "lib/gtk4.json",
        "lib/libadwaita.json",
        "lib/gtuber.json",
        {
            "name": "clapper",
            "buildsystem": "meson",
            "config-opts": [
                "--buildtype=release"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Rafostar/clapper.git",
                    "tag": "0.4.1",
                    "commit": "7a508fef392964e1c33e1795b0e1300ef48c0352"
                },
                {
                    "type": "patch",
                    "path": "clapper-remove-yt-prefs.patch"
                }
            ]
        }
    ],
    "cleanup-commands": [
        "ln -s /lib/$FLATPAK_ARCH-linux-*/gstreamer-1.0/libgstpipewire.so /app/lib/gstreamer-1.0/"
    ]
}
